{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RenderJPCV Resume Schema",
  "type": "object",
  "properties": {
    "config": {
      "type": "object",
      "properties": {
        "font_size": { "type": "string", "default": "11pt" }
      }
    },
    "profile": {
      "type": "object",
      "required": ["name", "name_kana", "birthday", "address"],
      "properties": {
        "name": { "type": "string", "description": "氏名" },
        "name_kana": { "type": "string", "description": "ふりがな" },
        "face_image_path": { "type": "string", "description": "顔写真のパス (例: ./photo.jpg)" },
        "birthday": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$", "description": "YYYY-MM-DD" },
        "age": { "type": ["integer", "string"], "description": "満年齢" },
        "gender": { "type": "string", "enum": ["男", "女", ""], "description": "性別 (任意)" },
        "address_zip": { "type": "string", "description": "郵便番号" },
        "address": { "type": "string", "description": "現住所" },
        "address_kana": { "type": "string", "description": "現住所ふりがな" },
        "phone": { "type": "string", "description": "電話番号" },
        "email": { "type": "string", "description": "メールアドレス" },
        "contact_zip": { "type": "string" },
        "contact_address": { "type": "string" },
        "contact_address_kana": { "type": "string" },
        "contact_phone": { "type": "string" },
        "contact_email": { "type": "string" }
      }
    },
    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}$", "description": "YYYY-MM" },
          "event": { "type": "string", "description": "入学・卒業などの内容" }
        }
      }
    },
    "work": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}$", "description": "YYYY-MM" },
          "event": { "type": "string", "description": "入社・退社などの内容" },
          "description": { "type": "string", "description": "補足（退職理由など）" }
        }
      }
    },
    "qualifications": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}$", "description": "YYYY-MM" },
          "name": { "type": "string", "description": "資格・免許名" }
        }
      }
    },
    "other": {
      "type": "object",
      "properties": {
        "motivation": { "type": "string", "description": "志望動機・自己PR" },
        "hopes": { "type": "string", "description": "本人希望記入欄" }
      }
    }
  }
}